/*
输入评论
*/
.search-bar {
  position: fixed;
  width: 100%;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #FFF;
  border-top: 1rpx solid #FFF;
  border-bottom: 1rpx solid #FFF;
  bottom: 0rpx;
}
.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid rgb(180, 180, 189);
  height: 30px;
}
.search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  margin-left: 20rpx;
}
.search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
  font-size: 14px;
}
