/*
搜索框css
*/
.search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background: linear-gradient(#efb336,#fff);
  margin-bottom: 10px;
}
.icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid rgb(180, 180, 189);
  height: 30px;
}
.search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #FFF;
  white-space: nowrap;
  font-size: 14px;
}
/*
视频列表
*/
.vedioItemOutter {
  height: 35px;
  display: flex;
  justify-content: start;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10px;
}
.vedioItemInner{
  height:35px;
  border-bottom-style: solid;
  border-bottom-width: 2rpx;
  border-bottom-color: rgb(180, 180, 189);
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-grow: 2;
}

.vedioIcon{
