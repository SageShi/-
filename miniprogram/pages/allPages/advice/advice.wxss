/* miniprogram/pages/allPages/advice.wxss */
.content{
  padding-top: 15px;
  padding-left: 15px;
  word-break:break-all;
  font-size:14px;
}
.date{
font-size:14px;
height:23px;
margin-left: 100px;
text-align:right;
}

.cardout {
  background: rgba(204, 204, 204, 0.295);
  border-bottom: 1px solid rgba(204, 204, 204, 0.295);
}

.cardin {
  background-color: #fff;
  color: rgba(102, 102, 105, 0.863);
  padding: 20rpx 20rpx 20rpx 20rpx;
  font-size:14px;
}

.support {
  width: 80rpx;
  height: 50rpx;
  margin: 20rpx;
}
.supportBox {
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.avatar{
  height:40px;
  width:40px;
  border-radius:20px;
  margin-right:30rpx
}
.avatarAndTitle{
  padding-bottom:5rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}
.title{
  display: flex;
  flex-direction: column;
  justify-content: start;
  border-bottom:solid;
  border-color:rgba(204, 204, 204, 0.781) ;
  border-bottom-width:3rpx;
  flex-grow: 2;
}
/* 回到顶部浮标 */
/*按钮*/
.icon {
  position: fixed;
  bottom: 15rpx;
  right: 15rpx;
  width: 80rpx;
  height: 80rpx;
}
/*设置text显示行数，多余的省略*/
.intro_info{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;

  margin-top: 10rpx;
  line-height: 29rpx;
  font-size: 26rpx;
  color: darkgray;
}