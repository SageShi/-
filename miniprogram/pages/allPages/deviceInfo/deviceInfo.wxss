/*
搜索框css
*/
.textWrap{
  background: rgba(204, 204, 204, 0.295);
}
.textStyle{
  background: #fff;
  height: 30px;
  border: 1px solid rgba(204, 204, 204, 0.295);
  margin-left: 20rpx;
  margin-top: 20px;
  width: 100%;
}
.out {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background:#fff;
    align-items: center;
    margin-left: 20rpx;
}

.in {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

image{
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

input{
    flex: 1;
    font-size: 30rpx;
}
/*
设备通知css
*/
.cardin {
  background-color: #fff;
  color: rgba(102, 102, 105, 0.863);
  padding: 20rpx 20rpx 20rpx 20rpx;
  font-size:14px;
  border-bottom: 1px solid rgba(204, 204, 204, 0.637);
}
.cCardout {
  background: rgba(204, 204, 204, 0.295);
  padding-top: 20px;
  display: flex;
  border-bottom: 1px solid rgba(204, 204, 204, 0.295) 
}

.cCardin {
  background-color: #fff;
  color: rgba(102, 102, 105, 0.863);
  font-size:14px;
  flex-grow: 1;
